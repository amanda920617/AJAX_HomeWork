        async function loadJSON() {
            const response = await fetch('@Url.Content("/api/Cities")')
            const datas = await response.json();
            const lis = datas.map(city => `<li>${city}</li>`)
            document.querySelector('#ul1').innerHTML = lis.join("");
        }



